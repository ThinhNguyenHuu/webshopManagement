

<div id="content">
<div id="content-header">
  <div id="breadcrumb"> <a href="/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> </div>
  <h1>Chỉnh sửa sản phẩm</h1>
</div>

<div class="errors-container">
  {{#each errors}}
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Lỗi!!</strong> {{msg}}
  </div>
  {{/each}}
</div>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
          <h5>Sản phẩm</h5>
        </div>
        <div class="widget-content nopadding">
          <form action="/product/edit/{{product._id}}" method="POST" class="form-horizontal" enctype="multipart/form-data">
            <div class="control-group">
              <label class="control-label">Tên<span class="require-sign">*</span> :</label>
              <div class="controls">
                <input type="text" class="span9" id="name" name="name" value="{{product.name}}" required/>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Chú thích<span class="require-sign">*</span> :</label>
              <div class="controls">
                <textarea type="text" class="span9" rows="5" id="description" name="description" required>{{product.description}}</textarea>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Giá<span class="require-sign">*</span> :</label>
              <div class="controls">
                <input type="number" class="span9" id="price" name="price" value="{{product.price}}"/>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Khuyến mãi<span class="require-sign">*</span> :</label>
              <div class="controls">
                <input type="number" class="span9" id="discount" name="discount" value="{{product.discount}}"/>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Thương hiệu<span class="require-sign">*</span> :</label>
              <div class="controls">
                <select class="span9" id="brand" name="brand">
                  {{#each listBrand}}
									<option value="{{_id}}" {{#idEquals _id ../product.brand }}selected="selected"{{/idEquals}}>{{name}}</option>
									{{/each}}
                </select>
              </div>	
            </div>
            <div class="control-group">
              <label class="control-label">Loại<span class="require-sign">*</span> :</label>
              <div class="controls">
                <select class="span9" id="category" name="category">
                  {{#each listCategory}}
									<option value="{{_id}}" {{#idEquals _id ../product.category }}selected="selected"{{/idEquals}}>{{name}}</option>
									{{/each}}
                </select>
              </div>
            </div>
            <div style="width:870px; display: flex;flex-wrap: wrap;padding: 20px 100px;margin:0 auto;">
              {{#each product.images_sources}}
              <a href="{{this.url}}" target="_blank">
                <img class="img-details-thumbnail" src="{{this.url}}" alt="product-image">
              </a>
              {{/each}}
            </div>
						<div class="control-group">
							<label class="control-label">Ảnh mới :</label>
              <div class="controls">
                <input type="file" name="image" id="image" accept="image/*" multiple/>
              </div>
						</div>
             <div style="width:870px; display: flex;flex-wrap: wrap;padding: 20px 100px;margin:0 auto;">
              <div class="column" style="display:flex;flex-wrap: wrap;width:100%"></div>
            </div>
            <div class="form-actions" style="text-align: end;padding-right:70px">
							<a class="btn btn-primary" href="javascript:history.back()" role="button">Hủy</a>
              <button type="submit" class="btn btn-success">Lưu</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>	
</div>
</div>

<script src="/javascripts/previewUpload.js"></script>

