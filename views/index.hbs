
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Management</h2>
					</div>
					<div class="col-sm-6">
						<a href="/add" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Add</span></a>						
					</div>
				</div>
			</div>
			<div style="table-responsive">
				<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Price</th>
						<th>Discount</th>
            <th>Brand</th>
            <th>Category</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>

					{{#each list}}
						<tr>
							<td>{{name}}</td>
							<td>{{description}}</td>
							<td>{{price}}</td>
							<td>{{discount}}</td>
							<td>{{brand}}</td>
							<td>{{category}}</td>
							<td>
								<a href="/edit/{{_id}}" class="edit"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
								<a href="/delete/{{_id}}" class="delete"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
							</td>
						</tr>
					{{/each}}

				</tbody>
			</table>
			</div>
			
			<div class="clearfix">
				<div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
				<ul class="pagination">
					<li class="page-item disabled"><a href="#">Previous</a></li>
					<li class="page-item"><a href="#" class="page-link">1</a></li>
					<li class="page-item"><a href="#" class="page-link">2</a></li>
					<li class="page-item active"><a href="#" class="page-link">3</a></li>
					<li class="page-item"><a href="#" class="page-link">4</a></li>
					<li class="page-item"><a href="#" class="page-link">5</a></li>
					<li class="page-item"><a href="#" class="page-link">Next</a></li>
				</ul>
			</div>
		</div>
	</div>        
</div>


