<div class="modal-dialog">
	<div class="modal-content">
		<form method="POST" action="https://inspiredigital.herokuapp.com/api/product/add/" enctype="multipart/form-data">
			<div class="modal-header">						
				<h4 class="modal-title">Add new product</h4>
			</div>
			<div class="modal-body">					
				<div class="form-group">	
					<label for="name">Name</label>
					<input type="text" class="form-control" name="name" id="name" required>
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<textarea type="email" class="form-control" rows="5" name="description" id="description" required></textarea>
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input class="form-control" name="price" id="price" required>
				</div>
				<div class="form-group">
					<label for="discount">Discount</label>
					<input type="text" class="form-control" name="discount" id="discount" required>
				</div>		
				<div class="form-group">
					<label for="brand">Brand</label>
					<select class="form-control" name="brand" id="brand">
						<option>Apple</option>
						<option>Microsoft</option>
						<option>LG</option>
						<option>Samsung</option>
					</select>
				</div>	
				<div class="form-group">
					<label for="category">Category</label>
					<select class="form-control" name="category" id="category">
						<option>Laptop</option>
						<option>Smartphone</option>
						<option>Headphone</option>
						<option>Camera</option>
					</select>
				</div>	
				 <div class="form-group">
					<label for="image">Image</label>
					<input type="file" class="form-control-file" name="image" id="image">
				</div>				
			</div>
			<div class="modal-footer">							
				<a class="btn btn-primary" href="/" role="button">Cancel</a>
				<input type="submit" class="btn btn-success" value="Add">
			</div>
		</form>
	</div>
</div>